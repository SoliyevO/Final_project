#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <DHT.h>

// LCD1602 I2C manzili odatda 0x27 bo'ladi
LiquidCrystal_I2C lcd(0x27, 16, 2);

// DHT22 sensor
#define DHTPIN 2
#define DHTTYPE DHT22
DHT dht(DHTPIN, DHTTYPE);

void setup() {
  lcd.begin(16,2);
  lcd.backlight();
  dht.begin();
}

void loop() {
  float temp = dht.readTemperature();
  float hum = dht.readHumidity();

  lcd.clear();
  
  if (isnan(temp) || isnan(hum)) {
    lcd.setCursor(0, 0);
    lcd.print("Sensor xatosi!");
    delay(2000);
    return;
  }

  lcd.setCursor(0, 0);
  lcd.print("T: ");
  lcd.print(temp);
  lcd.print((char)223); // Gradus belgisi
  lcd.print("C");

  lcd.setCursor(0, 1);
  lcd.print("H: ");
  lcd.print(hum);
  lcd.print("%");

  delay(2000); // ma'lumotni 2 soniyada yangilash

  // Harorat shartlarini tekshirish
  if (temp > 30) {
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("YUQORI HARORAT");
    delay(2000);
  } else if (temp < 10) {
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("PAST HARORAT");
    delay(2000);
  }
}
